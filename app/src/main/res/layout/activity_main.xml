<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_action"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="START"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_z" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/tv_x"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="X :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/btn_action"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_x_value"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:text="0.123456789"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/btn_action"
        app:layout_constraintStart_toEndOf="@+id/tv_x"
        app:layout_constraintTop_toTopOf="@+id/tv_x" />

    <TextView
        android:id="@+id/tv_y"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Y :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/btn_action"
        app:layout_constraintTop_toBottomOf="@+id/tv_x" />

    <TextView
        android:id="@+id/tv_y_value"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:text="0.123456789"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/btn_action"
        app:layout_constraintStart_toEndOf="@+id/tv_y"
        app:layout_constraintTop_toTopOf="@+id/tv_y" />

    <TextView
        android:id="@+id/tv_z"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Z :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/btn_action"
        app:layout_constraintTop_toBottomOf="@+id/tv_y" />

    <TextView
        android:id="@+id/tv_z_value"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:text="0.123456789"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/btn_action"
        app:layout_constraintStart_toEndOf="@+id/tv_z"
        app:layout_constraintTop_toTopOf="@+id/tv_z" />

</androidx.constraintlayout.widget.ConstraintLayout>